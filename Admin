  <script>
    function atualizarFila() {
      const posicao = Math.floor(Math.random() * 6) + 1;
      document.getElementById('fila').innerText = posicao + " cliente(s) esperando";
    }

    function chamarProximo() {
      alert("Cliente chamado! (Função real será ligada ao backend)");
